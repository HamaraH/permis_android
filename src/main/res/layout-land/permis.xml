<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_quebec"
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:src="@drawable/quebec" />

                <ImageView
                    android:id="@+id/photo_id"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/photo_id" />

                <ImageView
                    android:id="@+id/signature"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/signature"
                    android:visibility="visible"
                    app:srcCompat="@drawable/signature" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="500dip"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/permis_de_conduire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundTint="#E2A5146A"
                    android:text="@string/permis_de_conduire"
                    android:textColor="#830F0F0F"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"

                    />

                <TextView
                    android:id="@+id/numero_permis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/l1531_171374_08"
                    android:textColor="#FC000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:theme="@style/carte.section1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nom"
                    android:text="@string/ramm"
                   />

                <TextView
                    android:theme="@style/carte.section1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/prenom"
                    android:text="@string/arno_victor"
                   />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_naissance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/date_de_naissance_a_m_j"
                        android:textColor="#993085C5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date"
                        android:theme="@style/carte.section1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_1974_12_17"
                         />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/adresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_782_rue_marie_victorin"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/adresse2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chicoutimi_qc_g7h2k9"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/TableRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/blank"
                        android:layout_width="209dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/sexe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sexe"
                        android:textColor="#993085C5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sexe2"
                        android:theme="@style/carte.section1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/f"
                         />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/classe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/classe_s"
                        android:textColor="#993085C5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/classe2"
                        android:theme="@style/carte.section1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_5"
                         />

                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="212dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cond"
                                android:textColor="#993085C5"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/cond2"
                                android:theme="@style/carte.section1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/a_c"
                                 />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/mention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mention_s"
                                android:textColor="#993085C5"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/mention2"
                                android:theme="@style/carte.section1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f_m_t"
                                 />
                        </TableRow>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/taille"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/taille_cm"
                                android:textColor="#993085C5"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/taille2"
                                android:theme="@style/carte.section1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/_185"
                                />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/yeux"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/yeux"
                                android:textColor="#993085C5"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/yeux2"
                                android:theme="@style/carte.section1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/brun"
                                 />
                        </TableRow>
                    </LinearLayout>
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/no_ref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/n_de_r_f_rence"
                        android:textColor="#993085C5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/no_ref2"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:text="@string/p_b_m_h_9_2_v_7_0"
                        android:theme="@style/carte.section1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_valide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/valide_le"
                        android:textColor="#993085C5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date_valide2"
                        android:theme="@style/carte.section1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2014_10_01"
                         />

                    <TextView
                        android:id="@+id/espace"
                        android:layout_width="41dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/date_expire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expire_le"
                        android:textColor="#993085C5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date_expire2"
                        android:theme="@style/carte.section1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/_2022_12_17"
                         />
                </TableRow>

                <TextView
                    android:id="@+id/texte_fin"
                    android:layout_width="425dp"
                    android:layout_height="wrap_content"
                    android:text="@string/paiement_exig_chaque_ann_e_votre_date_d_anniversaire_de_naissance"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nom" />

                <EditText
                    android:id="@+id/edit_nom"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/votre_nom" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pr_nom" />

                <EditText
                    android:id="@+id/edit_prenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/votre_pr_nom" />

            </TableRow>

            <Button
                android:id="@+id/bouton_valider"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="88dip"
                android:onClick="maj_informations"
                android:text="@string/mettre_jour_les_informations" />

            <Switch
                android:id="@+id/switch_sexe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:focusableInTouchMode="false"
                android:onClick="changerSexe"
                android:showText="true"
                android:text="@string/sexe"
                android:textOff="@string/m"
                android:textOn="@string/f" />

            <CheckBox
                android:id="@+id/signature_visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:focusableInTouchMode="false"
                android:onClick="cacherSignature"
                android:text="@string/cacher_la_signature" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dip"
                    android:layout_marginRight="120dip"
                    android:gravity="center_horizontal"
                    android:onClick="sendToast"
                    android:text="Afficher un message" />

                <Button
                    android:id="@+id/btn_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="sendNotification"
                    android:text="Envoi d'une notification" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dip"
                    android:layout_marginRight="120dip"
                    android:gravity="center_horizontal"
                    android:onClick="ouvrirPageWeb"
                    android:text="Ouvrir Moodle" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:id="@+id/text_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="message" />

                <Button
                    android:id="@+id/btn_activite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openActivity"
                    android:text="Créer une nouvelle activité" />
            </TableRow>

        </LinearLayout>

    </LinearLayout>

</ScrollView>