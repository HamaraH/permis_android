<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="carte">  <!-- Thème "carte" qui ne sera pas utilisé dans le projet mais qui est défini ici-->

        <item name="android:textStyle"> bold </item>
        <item name="android:textSize"> 16sp</item>

    </style>

    <style name="carte.section1">  <!-- Style qui s'applique à tous les TextView qui doivent être en gras : police 16, en gras et noir-->

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="carte.section1.image"> <!-- Style qui s'applique à la photo du permis -->

        <item name="android:layout_marginTop"> 10dip </item>
        <item name="android:layout_marginBottom">10dip</item>

    </style>

</resources>
